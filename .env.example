# Application Configuration
APP_NAME="GPS Data Collection Service"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_V1_PREFIX="/api/v1"
ALLOWED_HOSTS=["*"]

# GPS Provider Configuration
GPS_PROVIDER_TYPE="mock"  # mock or real
GPS_API_BASE_URL="http://base_url:3000"
GPS_API_ENDPOINT="/prod/prod"
GPS_API_USERNAME="user_name"
GPS_API_PASSWORD="password"
GPS_API_TIMEOUT=30
GPS_API_MAX_RETRIES=3
GPS_API_RETRY_BACKOFF=2.0

# Concurrency Control
MAX_CONCURRENT_REQUESTS=10
BATCH_SIZE=50
RATE_LIMIT_REQUESTS_PER_SECOND=5.0

# MongoDB Atlas Configuration
MONGODB_URL="Test"
MONGODB_DB_NAME="gps_telemetry"
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100
MONGODB_MAX_IDLE_TIME_MS=45000

# Development Mode - Allow startup without MongoDB
ALLOW_MONGODB_FAILURE=false

# Collections
TELEMETRY_COLLECTION="vehicle_telemetry"
JOB_EXECUTION_LOG_COLLECTION="job_execution_logs"

# Scheduler Configuration
SCHEDULER_TIMEZONE="America/Mexico_City"

# Job Schedules (Cron Expressions)
# Format: "minute hour day month day_of_week"
JOB_VEHICLE_POSITION_CRON="*/5 * * * *"  # Every 5 minutes
JOB_ODOMETER_CRON="0 */6 * * *"  # Every 6 hours
JOB_ENGINE_STATUS_CRON="*/10 * * * *"  # Every 10 minutes
JOB_SPEED_MONITORING_CRON="*/5 * * * *"  # Every 5 minutes
JOB_IGNITION_CRON="*/15 * * * *"  # Every 15 minutes
JOB_VOLTAGE_HEALTH_CRON="0 0 * * *"  # Daily at midnight

# Data Retention (days)
TELEMETRY_RETENTION_DAYS=90
JOB_LOG_RETENTION_DAYS=30

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_AGENT_HOST=
JAEGER_AGENT_PORT=

# Alert Thresholds
ALERT_MAX_JOB_DURATION_SECONDS=600
ALERT_MAX_FAILURE_RATE=0.1